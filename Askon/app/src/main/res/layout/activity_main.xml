<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:gravity="center"
    android:background="#F5F5F5">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Askon - Expert Consultation Platform"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="#333333"
        android:gravity="center"
        android:paddingBottom="16dp" />

    <TextView
        android:id="@+id/tvResults"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Welcome to Askon!"
        android:textSize="16sp"
        android:textColor="#666666"
        android:gravity="center"
        android:paddingBottom="24dp" />

    <Button
        android:id="@+id/btnGoToExperts"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Find Experts"
        android:textAllCaps="false" />


    <Button
        android:id="@+id/btnTestBooking"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Test Booking"
        android:layout_marginBottom="8dp"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/btnTestChat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Test Chat"
        android:layout_marginBottom="16dp"
        android:textAllCaps="false" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#FFFFFF"
        android:padding="12dp">

        <TextView
            android:id="@+id/tvResults"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Click any button to test functionality"
            android:textSize="14sp"
            android:textColor="#333333"
            android:fontFamily="monospace" />
    </ScrollView>

</LinearLayout>
